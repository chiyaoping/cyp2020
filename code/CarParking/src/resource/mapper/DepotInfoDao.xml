<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyp.carpark.dao.DepotInfoDao">
<cache type="com.cyp.carpark.utils.RedisCache"/>
    <update id="update">
       update depotinfo set hourmoney=#{hourmoney},daymaxmoney=#{daymaxmoney},monthcard=#{monthcard},yearcard=#{yearcard},illegal=#{illegal}
       where id=1
    </update>
    <select id="findById" resultType="com.cyp.carpark.entity.DepotInfo">
        select * from depotinfo where id=#{id}
    </select>
</mapper>